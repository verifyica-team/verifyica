{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchManagers": ["maven-wrapper"],
      "allowedVersions": "3.9.11",
      "groupName": "Maven wrapper pinned to 3.9.11"
    },
    {
      "matchPackageNames": ["org.apache.maven:maven-core"],
      "enabled": false
    },
    {
      "matchPackageNames": ["org.apache.maven:maven-plugin-api"],
      "enabled": false
    },
    {
      "matchManagers": ["maven"],
      "groupName": "Maven dependencies"
    }
  ]
}
